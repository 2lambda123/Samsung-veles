{% set set_names = ("test", "validation", "train") %}
<ac:layout>
    <ac:layout-section ac:type="two_equal">
        <ac:layout-cell>
            <h1>Task Description</h1>

            <ac:structured-macro ac:name="section">
                <ac:rich-text-body>
                    {% if image is not none %}
                    <ac:structured-macro ac:name="column">
                        <ac:parameter ac:name="width">30%</ac:parameter>
                        <ac:rich-text-body>
                            <ac:image>
                                <ri:attachment ri:filename="{{ image["name"] }}"/>
                            </ac:image>
                        </ac:rich-text-body>
                    </ac:structured-macro>
                    <ac:structured-macro ac:name="column">
                        <ac:parameter ac:name="width">70%</ac:parameter>
                        <ac:rich-text-body>
                            <p>{{ description }}</p>
                            <h4>Workflow path</h4>{{ workflow_file }}
                            <h4>Configuration path</h4>{{ config_file }}
                        </ac:rich-text-body>
                    </ac:structured-macro>
                    {% else %}
                    <p>{{ description }}</p>
                    <h4>Workflow path</h4>{{ workflow_file }}
                    <h4>Configuration path</h4>{{ config_file }}
                    {% endif %}
                </ac:rich-text-body>
            </ac:structured-macro>
            {% if errors_pt is defined %}
            <h1>Results</h1>
            <table>
                <tbody>
                    <tr>
                        <th>set</th>
                        <th>accuracy</th>
                        <th>errors</th>
                    </tr>
                    {% for i in range(3) %}
                    {% if class_lengths[i] > 0 %}
                    <tr>
                        <td>{{ set_names[i] }}</td>
                        <td>{{ (100 - errors_pt[i])|round(2) }}%</td>
                        <td>{{ errors_pt[i]|round(2) }}%</td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}
            <h1>Source data</h1>
            <ac:structured-macro ac:name="chart">
                <ac:parameter ac:name="title">Samples</ac:parameter>
                <ac:parameter ac:name="subTitle">Total number: {{ total_samples }}
                </ac:parameter>
                <ac:parameter ac:name="type">pie</ac:parameter>
                <ac:parameter ac:name="imageFormat">png</ac:parameter>
                <ac:rich-text-body>
                    <table>
                        <tbody>
                            <tr>
                                <th>
                                    <p>Number</p>
                                </th>
                                {% for name in set_names %}
                                <th>
                                    <p>{{ name }}</p>
                                </th>
                                {% endfor %}
                            </tr>
                            <tr>
                                <th>
                                    <p>Value</p>
                                </th>
                                {% for i in range(3) %}
                                <td>
                                    <p>{{ class_lengths[i] }}</p>
                                </td>
                                {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </ac:rich-text-body>
            </ac:structured-macro>
            <h4>Labels</h4>
            <p>{{ labels|sort }} (total: {{ labels|length }})</p>
            {% for i in range(3) %}
            {% if label_stats[i]|length > 0 %}
            <ac:structured-macro ac:name="chart">
                <ac:parameter ac:name="title">Labels</ac:parameter>
                <ac:parameter ac:name="subTitle">{{ set_names[i] }}</ac:parameter>
                <ac:parameter ac:name="type">pie</ac:parameter>
                <ac:parameter ac:name="imageFormat">png</ac:parameter>
                <ac:rich-text-body>
                    <table>
                        <tbody>
                            <tr>
                                <th>
                                    <p>Number</p>
                                </th>
                                {% for name in label_stats[i]|sort %}
                                <th>
                                    <p>{{ name }}</p>
                                </th>
                                {% endfor %}
                            </tr>
                            <tr>
                                <th>
                                    <p>Value</p>
                                </th>
                                {% for _, value in label_stats[i]|dictsort %}
                                <td>
                                    <p>{{ value }}</p>
                                </td>
                                {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </ac:rich-text-body>
            </ac:structured-macro>
            {% endif %}
            {% endfor %}
            <h4>Normalization</h4>
            <table>
                <tbody>
                    <tr>
                        <td>type of normalization</td>
                        <td>{{ normalization }}</td>
                    </tr>
                    <tr>
                        <td>normalization parameters</td>
                        <td>{{ normalization_parameters }}</td>
                    </tr>
                </tbody>
            </table>
            <h1>Run stats</h1>
            <table>
                <tbody>
                    <tr>
                        <td>elapsed time</td>
                        <td>{{ days }} days, {{ hours }} hours, {{ mins }}
                            minutes, {{ secs|round(1) }} secs
                        </td>
                    </tr>
                    <tr>
                        <td>number of epochs</td>
                        <td>{{ epochs }}</td>
                    </tr>
                </tbody>
            </table>
            <ac:structured-macro ac:name="chart">
                <ac:parameter ac:name="title">Unit run time</ac:parameter>
                <ac:parameter ac:name="type">pie</ac:parameter>
                <ac:parameter ac:name="imageFormat">png</ac:parameter>
                <ac:parameter ac:name="width">600</ac:parameter>
                <ac:parameter ac:name="height">600</ac:parameter>
                <ac:rich-text-body>
                    <table>
                        <tbody>
                            <tr>
                                <th>
                                    <p>Number</p>
                                </th>
                                {% for name, _ in unit_run_times_by_class|dictsort(by='value')|reverse %}
                                <th>
                                    <p>{{ name }}</p>
                                </th>
                                {% endfor %}
                            </tr>
                            <tr>
                                <th>
                                    <p>Value</p>
                                </th>
                                {% for _, value in unit_run_times_by_class|dictsort(by='value')|reverse %}
                                <td>
                                    <p>{{ value|round(4) }}</p>
                                </td>
                                {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </ac:rich-text-body>
            </ac:structured-macro>
            <h1>Configuration</h1>
            <ac:structured-macro ac:name="noformat">
                <ac:plain-text-body>
                    <![CDATA[{{ config_text }}]]></ac:plain-text-body>
            </ac:structured-macro>
        </ac:layout-cell>
        <ac:layout-cell>
            <h1>Workflow</h1>
            <p>
                <ac:image ac:width="600">
                    <ri:attachment ri:filename="workflow.png"/>
                </ac:image>
            </p>
            <h1>Plots</h1>
            <p>
                {% for name in plots|sort %}
                <h4>{{ name }}</h4>
                <ac:image ac:width="600">
                    <ri:attachment ri:filename="{{ name }}.png"/>
                </ac:image>
                <br/>
                {% endfor %}
            </p>
        </ac:layout-cell>
    </ac:layout-section>
</ac:layout>
