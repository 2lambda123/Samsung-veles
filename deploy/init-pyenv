#!/bin/sh

if [ -z "$1" ]; then
  export PYENV_ROOT=$(dirname $(readlink -f $0))/deploy/pyenv
else
  export PYENV_ROOT="$1"
fi
export PATH="$PYENV_ROOT/shims:$PYENV_ROOT/bin:$PATH"
export PYENV_SHELL=bash
if [ -n "$BASH" ]; then
  . "$PYENV_ROOT/completions/pyenv.bash"
fi
pyenv rehash 2>/dev/null

pyenv() {
  local command
  command="$1"
  if [ "$#" -gt 0 ]; then
    shift
  fi

  case "$command" in
  rehash|shell)
    eval "`pyenv "sh-$command" "$@"`";;
  *)
    command pyenv "$command" "$@";;
  esac
}
